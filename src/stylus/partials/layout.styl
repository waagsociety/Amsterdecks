main
  padding small-percentage
  
.paper 
  background-color #FFFEFF
  width 500px
  height 100px
  overflow hidden
  position relative
  margin-bottom 16px
  box-shadow 0px 1px 2px 1px #D3D2D3
  border-radius 2px
  transition 0.1s ease-in
  user-select none
  &:hover
    cursor pointer

#num 
  font-family 'Roboto', sans-serif
  font-size 28px
  color #999
  text-align center
  margin-top 32px

.ripple 
  background-color rgba(0, 0, 0, 0.05)
  border-radius 100%
  height 100px
  width 100px
  margin-top -90px
  position relative
  transform scale(0)


.animate 
  animation ripple 0.4s linear
